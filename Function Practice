#include <stdio.h>
#include <cstdlib>
#include <ctime>

#include "MyHead.h"



//  function to generate random int values from 100000 - 523312
int generateRandomValues(){

    printf("\nGenerating random values...\n\n");

	srand(time_t(0));
	int min = 100000;  //minimum value
	int max = 523312;  //max value
	
	int random_number = -1;

	for (int i = 0; i < SIZE; i++)
	{
		random_number = min + rand() % (( max - min ) +1);

		globalArray[i] = random_number;
	}
	
	return 0;

}  // end generateRandomValues()


// function to print values of generated array
int printValues(){

	int itemCounter = 1;

	printf("Printing number %d...\n", runCounter);
	
	printf("Orginal random values\n");

	for (int i = 0; i < 30; i++)
	{
		printf("-");
	}

	for (int i = 0; i < SIZE; i++)
	{
		printf("\n%d %1d", itemCounter, globalArray[i]);
		itemCounter = itemCounter + 1;
	}
	
	printf("\n");

	for (int i = 0; i < 30; i++)
	{
		printf("-");
	}

	runCounter = runCounter + 1;
	return 0;

} 


//function to modifiy the numbers in the array
int modValues(){

	int itemCounter = 1;
	
	printf("\nModifying random numbers...");

	globalArray[0] = globalArray[1] % globalArray[0];
	globalArray[1] = globalArray[2] % globalArray[1];
	globalArray[2] = globalArray[3] % globalArray[2];
	globalArray[3] = globalArray[4] % globalArray[3];
	globalArray[4] = globalArray[5] % globalArray[4];
	globalArray[5] = globalArray[6] % globalArray[5];
	globalArray[6] = globalArray[7] % globalArray[6];
	globalArray[7] = globalArray[8] % globalArray[7];
	globalArray[8] = globalArray[9] % globalArray[8];
	globalArray[9] = globalArray[0] % globalArray[9];

	return 0;

}
